<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangGioHang"
    android:background="#FFFDE7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#2ecc71">
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:id="@+id/rlt1">
                <TextView
                    android:id="@+id/membershipLabel"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Thành viên"
                    android:textColor="#2ecc71"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@id/membershipLabel"
                    android:text="vanhlg"
                    android:textColor="#FFFDE7"
                    android:textSize="24sp" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_toEndOf="@id/rlt1"
                android:contentDescription="Hình đại diện"
                android:src="@drawable/default_profile_image" />
        </RelativeLayout>
        <ListView
            android:id="@+id/thongbaocanhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black" />
        <Button
            android:id="@+id/btUpdateSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Ninpepe Voucher"
            android:drawableLeft="@drawable/ninpepe_voucher"
            android:paddingStart="20dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:fontFamily="@font/svn_aleo"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:drawableRight="@drawable/icon_next" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp">
            </CheckBox>
            <TextView
                android:id="@+id/product_description"
                android:layout_marginLeft="5dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Chọn tất cả"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <Button
                android:layout_marginStart="70dp"
                android:id="@+id/btn_update_product"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:text="Mua ngay"
                android:layout_gravity="end"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:backgroundTint="#ff0000"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#00BF63"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/button1"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_button_trangchu"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Button 1"
                android:layout_margin="8dp"/>
            <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/icon_button_sale"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Button 2"
                android:layout_margin="8dp"
                android:paddingStart="15dp"/>
            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/icon_button_notification"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Button 3"
                android:layout_margin="8dp"
                android:paddingStart="15dp"/>
            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/icon_button_giohang"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Button 4"
                android:layout_margin="8dp"
                android:paddingStart="15dp"/>

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:src="@drawable/icon_button_myself"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Button 5"
                android:layout_margin="8dp"
                android:paddingStart="15dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
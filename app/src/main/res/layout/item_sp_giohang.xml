<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"></CheckBox>

    <ImageView
        android:id="@+id/anh"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/demoanhdienthoai" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/product_description"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ViVo Y22s"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/product_money"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1.150.000đ"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/product_soluong"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1"
            android:textColor="@color/black"
            android:background="#EDEBEA"
            android:textStyle="bold"
            android:textSize="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_update_product"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:text="Sửa"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/button_border"
        android:textSize="20dp" />
</LinearLayout>